						num = 0;    // ←★2
					}
					 alert("あ");
				
					// タブ処理
					tabSwitching(num);
				
				
					// クリックされた場合
					$('.tab-group li').click(function() {
						// クリックされた <li> のインデックス番号を取得
						num = $('.tab-group li').index(this);
							
						// タブ処理
						tabSwitching(num);
				
				
						// クッキーを保存
						// 有効期限は1日(ブラウザを閉じたら初期化)
						$.cookie('num', num, {expires: 1});     // ←★3
					});
				
				
					// タブ切り替え処理
					function tabSwitching( num ){
						// リストに設定されている class="chose" を削除
						$('.tab-group li').removeClass('chose');
				
						// 前回クリックされていた <li> に class="chose" 追加
						$('.tab-group li').eq(num).addClass('chose');
				
						// tabContents に class="hide" を追加
						$('.tabContents').addClass('hide');
				
						// 取得したインデックス番号の class="hide" を削除
						$('.tabContents').eq(num).removeClass('hide');
					}
				
				
				//チェックボタン
				// 「全て選択」チェックで全てにチェック付く
				function AllChecked(){
					var check =  document.form.all.checked;

					for (var i=0; i<document.form.elements['con[]'].length; i++){
						document.form.elements['con[]'][i].checked = check;
					}
				}
				// 一つでもチェックを外すと「全て選択」のチェック外れる
				function　DisChecked(){
					var checks = document.form.elements['con[]'];
					var checksCount = 0;
					for (var i=0; i<checks.length; i++){
					if(document.form.elements['con[]'][i].checked == false){
						document.form.all.checked = false;
					}else{
						checksCount += 1;
						if(checksCount == document.form.elements['con[]'][i].length){
						document.form.all.checked = true;
						}
					}
					}
				}
